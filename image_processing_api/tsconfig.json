{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["ES6", "DOM"],
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./src"],
    "exclude": ["node_modules", "spec", "build"]
  }
  